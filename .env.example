# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/ecommerce
# For SQLite development: DATABASE_URL=sqlite:///./ecommerce.db

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_super_secret_jwt_key_here_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
APP_NAME=Burhani Collection E-Commerce
APP_VERSION=2.0.0
DEBUG=True

# CORS Origins (comma-separated for production)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret
RAZORPAY_WEBHOOK_SECRET=optional_webhook_secret

# WhatsApp Integration
WHATSAPP_BUSINESS_NUMBER=917869622753

# File Upload
UPLOAD_DIR=static/uploads
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.webp

# Email Configuration (optional - for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@burhanicollection.com
